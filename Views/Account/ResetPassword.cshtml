@model IlisanCommerce.Models.ResetPasswordViewModel
@{
    ViewData["Title"] = "Şifre Sıfırla";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-content">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-8 mx-auto">
                <div class="mv-form">
                    <div class="form-header">
                        <div class="form-header-inner">
                            <div class="form-title">
                                <h3>Şifre Sıfırla</h3>
                                <div class="text-sub">Yeni şifrenizi belirleyin</div>
                            </div>
                        </div>
                    </div>

                    <div class="form-body">
                        <form asp-action="ResetPassword" method="post">
                            <input asp-for="Token" type="hidden" />
                            
                            <div class="mv-form-group">
                                <div class="mv-label">
                                    <strong class="text-uppercase">Yeni Şifre</strong>
                                </div>
                                <div class="mv-field">
                                    <input asp-for="Password" type="password" class="form-control" placeholder="En az 6 karakter" required />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="mv-form-group">
                                <div class="mv-label">
                                    <strong class="text-uppercase">Şifre Tekrarı</strong>
                                </div>
                                <div class="mv-field">
                                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Şifrenizi tekrar girin" required />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="mv-form-group">
                                <button type="submit" class="btn btn-success btn-block">
                                    <i class="fa fa-check"></i> Şifreyi Sıfırla
                                </button>
                            </div>

                            <div class="mv-form-group text-center">
                                <a asp-action="Login" class="btn btn-link">
                                    <i class="fa fa-arrow-left"></i> Giriş Sayfasına Dön
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .mv-form {
        background: #fff;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        padding: 30px;
        margin: 50px 0;
    }
    
    .form-header {
        text-align: center;
        margin-bottom: 30px;
    }
    
    .form-title h3 {
        color: #333;
        margin-bottom: 10px;
    }
    
    .text-sub {
        color: #666;
        font-size: 14px;
    }
    
    .mv-form-group {
        margin-bottom: 20px;
    }
    
    .mv-label {
        margin-bottom: 8px;
    }
    
    .mv-field input {
        border: 2px solid #e1e1e1;
        border-radius: 5px;
        padding: 12px 15px;
        font-size: 16px;
        transition: border-color 0.3s;
    }
    
    .mv-field input:focus {
        border-color: #28a745;
        box-shadow: 0 0 0 0.2rem rgba(40,167,69,.25);
    }
    
    .btn-success {
        background: linear-gradient(45deg, #28a745, #1e7e34);
        border: none;
        padding: 12px 30px;
        font-size: 16px;
        font-weight: 600;
        border-radius: 5px;
        transition: all 0.3s;
    }
    
    .btn-success:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(40,167,69,0.3);
    }
    
    .btn-link {
        color: #007bff;
        text-decoration: none;
    }
    
    .btn-link:hover {
        text-decoration: underline;
    }
</style>

<script>
    // Toast bildirimleri için
    function showToast(message, type = 'success') {
        const toastContainer = document.getElementById('toast-container') || createToastContainer();
        const toast = document.createElement('div');
        toast.className = `toast toast-${type}`;
        toast.textContent = message;
        toastContainer.appendChild(toast);

        setTimeout(() => {
            toast.style.animation = 'slideInRight 0.3s ease-out reverse';
            setTimeout(() => {
                if (toast.parentNode) {
                    toast.parentNode.removeChild(toast);
                }
            }, 300);
        }, 5000);
    }

    function createToastContainer() {
        const container = document.createElement('div');
        container.id = 'toast-container';
        container.className = 'toast-container';
        document.body.appendChild(container);
        return container;
    }

    document.addEventListener('DOMContentLoaded', function() {
        @if (!string.IsNullOrEmpty(TempData["SuccessMessage"] as string))
        {
            <text>
            showToast('@Html.Raw(TempData["SuccessMessage"])', 'success');
            </text>
        }

        @if (!string.IsNullOrEmpty(TempData["ErrorMessage"] as string))
        {
            <text>
            showToast('@Html.Raw(TempData["ErrorMessage"])', 'error');
            </text>
        }
    });
</script>

<style>
    .toast-container {
        position: fixed;
        top: 20px;
        right: 20px;
        z-index: 9999;
    }

    .toast {
        background: #fff;
        border-radius: 5px;
        padding: 15px 20px;
        margin-bottom: 10px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        animation: slideInRight 0.3s ease-out;
        min-width: 300px;
        border-left: 4px solid;
    }

    .toast-success {
        border-left-color: #28a745;
        color: #155724;
    }

    .toast-error {
        border-left-color: #dc3545;
        color: #721c24;
    }

    @@keyframes slideInRight {
        from {
            opacity: 0;
            transform: translateX(100%);
        }
        to {
            opacity: 1;
            transform: translateX(0);
        }
    }
</style>
