@model IlisanCommerce.Models.ShippingRate
@{
    ViewData["Title"] = "Kargo Fiyatlandırması Düzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0">Kargo Fiyatlandırması Düzenle</h1>
                <a href="@Url.Action("ShippingRates", "Admin")" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Geri Dön
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Kargo Fiyatlandırması Bilgileri</h6>
                </div>
                <div class="card-body">
                    <form asp-action="EditShippingRate" method="post">
                        <input asp-for="Id" type="hidden" />
                        <input asp-for="CreatedDate" type="hidden" />
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Name" class="form-label">Kargo Adı *</label>
                                <input asp-for="Name" class="form-control" placeholder="Örn: Standart Kargo" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="EstimatedDeliveryDays" class="form-label">Teslimat Süresi</label>
                                <input asp-for="EstimatedDeliveryDays" class="form-control" placeholder="Örn: 1-2 gün" />
                                <span asp-validation-for="EstimatedDeliveryDays" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Açıklama</label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Kargo hakkında açıklama..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="MinDesi" class="form-label">Minimum Desi *</label>
                                <input asp-for="MinDesi" class="form-control" type="number" step="0.01" min="0" placeholder="0" />
                                <span asp-validation-for="MinDesi" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="MaxDesi" class="form-label">Maksimum Desi</label>
                                <input asp-for="MaxDesi" class="form-control" type="number" step="0.01" min="0" placeholder="Boş bırakılırsa sınırsız" />
                                <span asp-validation-for="MaxDesi" class="text-danger"></span>
                                <small class="form-text text-muted">Boş bırakılırsa sınırsız olur</small>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="SortOrder" class="form-label">Sıralama</label>
                                <input asp-for="SortOrder" class="form-control" type="number" min="0" placeholder="0" />
                                <span asp-validation-for="SortOrder" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="ShippingCost" class="form-label">Kargo Ücreti (TL) *</label>
                                <input asp-for="ShippingCost" class="form-control" type="number" step="0.01" min="0" placeholder="0.00" />
                                <span asp-validation-for="ShippingCost" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="FreeShippingThreshold" class="form-label">Ücretsiz Kargo Limiti (TL)</label>
                                <input asp-for="FreeShippingThreshold" class="form-control" type="number" step="0.01" min="0" placeholder="Boş bırakılırsa ücretsiz kargo yok" />
                                <span asp-validation-for="FreeShippingThreshold" class="text-danger"></span>
                                <small class="form-text text-muted">Bu tutar üzerinde ücretsiz kargo</small>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="form-check">
                                    <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                                    <label asp-for="IsActive" class="form-check-label">
                                        Aktif
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="form-check">
                                    <input asp-for="IsDefault" class="form-check-input" type="checkbox" />
                                    <label asp-for="IsDefault" class="form-check-label">
                                        Varsayılan Kargo
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end">
                            <a href="@Url.Action("ShippingRates", "Admin")" class="btn btn-secondary me-2">İptal</a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Güncelle
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Bilgi</h6>
                </div>
                <div class="card-body">
                    <h6>Desi Hesaplama:</h6>
                    <p class="small text-muted">
                        Desi = (En x Boy x Yükseklik) / 3000<br>
                        Örnek: 30x20x10 cm = 6000/3000 = 2 desi
                    </p>
                    
                    <h6 class="mt-3">Kargo Fiyatlandırması:</h6>
                    <ul class="small text-muted">
                        <li>Minimum desi: Bu kargo seçeneğinin geçerli olacağı minimum desi değeri</li>
                        <li>Maksimum desi: Bu kargo seçeneğinin geçerli olacağı maksimum desi değeri (boş = sınırsız)</li>
                        <li>Ücretsiz kargo limiti: Bu tutar üzerinde kargo ücreti alınmaz</li>
                        <li>Varsayılan: Hiçbir kargo seçeneği uygun değilse bu kullanılır</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
