@model CustomersIndexViewModel
@{
    ViewData["Title"] = "Müşteri Yönetimi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <!-- Page Header with Statistics -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div>
                    <h2 class="mb-0 fw-bold">
                        <i class="fas fa-users text-primary me-2"></i>
                        Müşteri Yönetimi
                    </h2>
                    <p class="text-muted mb-0">Kayıtlı müşterileri görüntüleyin ve yönetin</p>
                </div>
                <div class="d-flex gap-2">
                    <a href="@Url.Action("Export")" class="btn btn-outline-success btn-sm">
                        <i class="fas fa-download me-1"></i>
                        CSV Dışa Aktar
                    </a>
                    <button class="btn btn-outline-secondary btn-sm" onclick="location.reload()">
                        <i class="fas fa-sync-alt me-1"></i>
                        Yenile
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card bg-gradient-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-1">Toplam Müşteri</h6>
                            <h3 class="mb-0 fw-bold">@ViewBag.TotalCustomers</h3>
                        </div>
                        <div class="card-icon">
                            <i class="fas fa-users fa-2x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-gradient-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-1">Aktif Müşteri</h6>
                            <h3 class="mb-0 fw-bold">@ViewBag.ActiveCustomers</h3>
                        </div>
                        <div class="card-icon">
                            <i class="fas fa-user-check fa-2x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-gradient-info text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-1">Bu Ayki Yeni</h6>
                            <h3 class="mb-0 fw-bold">@ViewBag.NewCustomersThisMonth</h3>
                        </div>
                        <div class="card-icon">
                            <i class="fas fa-user-plus fa-2x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters and Search -->
    <div class="card shadow-sm mb-4">
        <div class="card-body py-3">
            <form method="get" class="row g-3 align-items-end">
                <div class="col-md-6">
                    <label class="form-label fw-semibold">Müşteri Ara</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light border-end-0">
                            <i class="fas fa-search text-muted"></i>
                        </span>
                        <input type="text" 
                               name="search" 
                               value="@Model.SearchTerm" 
                               class="form-control border-start-0" 
                               placeholder="Ad, soyad, email veya telefon ile ara...">
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="d-grid gap-2 d-md-flex">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-search me-1"></i>
                            Ara
                        </button>
                        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                            <i class="fas fa-times me-1"></i>
                            Temizle
                        </a>
                    </div>
                </div>
                <div class="col-md-3 text-md-end">
                    <small class="text-muted">
                        <i class="fas fa-info-circle me-1"></i>
                        Toplam <strong>@Model.Pagination.TotalItems</strong> müşteri bulundu
                    </small>
                </div>
            </form>
        </div>
    </div>

    <!-- Customers Table -->
    <div class="card shadow-sm">
        <div class="card-header bg-white border-bottom-0">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0 fw-semibold">
                    <i class="fas fa-list me-2 text-primary"></i>
                    Müşteri Listesi
                </h5>
                <div class="d-flex align-items-center">
                    <span class="badge bg-light text-dark me-2">
                        Sayfa @Model.Pagination.CurrentPage / @Model.Pagination.TotalPages
                    </span>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            @if (Model.Customers.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover table-striped mb-0">
                        <thead class="table-light">
                            <tr>
                                <th width="25%">Müşteri Bilgileri</th>
                                <th width="20%">İletişim</th>
                                <th width="15%" class="text-center">Kayıt Tarihi</th>
                                <th width="15%" class="text-center">Sipariş İstatistikleri</th>
                                <th width="10%" class="text-center">Durum</th>
                                <th width="15%" class="text-center">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var customer in Model.Customers)
                            {
                                <tr id="customer-@customer.Id">
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="customer-avatar me-3">
                                                <div class="avatar-circle bg-primary text-white">
                                                    @customer.FullName.Substring(0, 1).ToUpper()
                                                </div>
                                            </div>
                                            <div>
                                                <div class="fw-semibold text-dark">@customer.FullName</div>
                                                <small class="text-muted">ID: #@customer.Id</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="mb-1">
                                            <i class="fas fa-envelope text-muted me-1"></i>
                                            <small>@customer.Email</small>
                                        </div>
                                        @if (!string.IsNullOrEmpty(customer.PhoneNumber))
                                        {
                                            <div>
                                                <i class="fas fa-phone text-muted me-1"></i>
                                                <small>@customer.PhoneNumber</small>
                                            </div>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="fw-semibold">@customer.RegisterDate.ToString("dd.MM.yyyy")</div>
                                        <small class="text-muted">@customer.RegisterDate.ToString("HH:mm")</small>
                                    </td>
                                    <td class="text-center">
                                        <div class="mb-1">
                                            <span class="badge bg-info">@customer.TotalOrders Sipariş</span>
                                        </div>
                                        <div class="text-success fw-semibold">
                                            @customer.TotalSpent.ToString("C", new System.Globalization.CultureInfo("tr-TR"))
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        @if (customer.IsActive)
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-check-circle me-1"></i>
                                                Aktif
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="fas fa-times-circle me-1"></i>
                                                Pasif
                                            </span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a href="@Url.Action("Details", new { id = customer.Id })" 
                                               class="btn btn-outline-primary" 
                                               data-bs-toggle="tooltip" 
                                               title="Detayları Görüntüle">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <button type="button" 
                                                    class="btn btn-outline-@(customer.IsActive ? "warning" : "success") status-toggle"
                                                    onclick="toggleCustomerStatus(@customer.Id)"
                                                    data-bs-toggle="tooltip" 
                                                    title="@(customer.IsActive ? "Pasif Yap" : "Aktif Yap")">
                                                <i class="fas fa-@(customer.IsActive ? "user-slash" : "user-check")"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                @if (Model.Pagination.TotalPages > 1)
                {
                    <div class="card-footer bg-light">
                        <nav aria-label="Customer pagination">
                            <ul class="pagination pagination-sm justify-content-center mb-0">
                                @if (Model.Pagination.HasPrevious)
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="@Url.Action("Index", new { page = 1, search = Model.SearchTerm })">
                                            <i class="fas fa-angle-double-left"></i>
                                        </a>
                                    </li>
                                    <li class="page-item">
                                        <a class="page-link" href="@Url.Action("Index", new { page = Model.Pagination.CurrentPage - 1, search = Model.SearchTerm })">
                                            <i class="fas fa-angle-left"></i>
                                        </a>
                                    </li>
                                }

                                @for (int i = Math.Max(1, Model.Pagination.CurrentPage - 2); i <= Math.Min(Model.Pagination.TotalPages, Model.Pagination.CurrentPage + 2); i++)
                                {
                                    <li class="page-item @(i == Model.Pagination.CurrentPage ? "active" : "")">
                                        <a class="page-link" href="@Url.Action("Index", new { page = i, search = Model.SearchTerm })">@i</a>
                                    </li>
                                }

                                @if (Model.Pagination.HasNext)
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="@Url.Action("Index", new { page = Model.Pagination.CurrentPage + 1, search = Model.SearchTerm })">
                                            <i class="fas fa-angle-right"></i>
                                        </a>
                                    </li>
                                    <li class="page-item">
                                        <a class="page-link" href="@Url.Action("Index", new { page = Model.Pagination.TotalPages, search = Model.SearchTerm })">
                                            <i class="fas fa-angle-double-right"></i>
                                        </a>
                                    </li>
                                }
                            </ul>
                        </nav>
                    </div>
                }
            }
            else
            {
                <div class="text-center py-5">
                    <div class="mb-3">
                        <i class="fas fa-users fa-3x text-muted"></i>
                    </div>
                    <h5 class="text-muted">Müşteri Bulunamadı</h5>
                    <p class="text-muted">
                        @if (!string.IsNullOrEmpty(Model.SearchTerm))
                        {
                            <span>Arama kriterinize uygun müşteri bulunamadı.</span>
                        }
                        else
                        {
                            <span>Henüz kayıtlı müşteri bulunmuyor.</span>
                        }
                    </p>
                    @if (!string.IsNullOrEmpty(Model.SearchTerm))
                    {
                        <a href="@Url.Action("Index")" class="btn btn-outline-primary">
                            <i class="fas fa-times me-1"></i>
                            Filtreleri Temizle
                        </a>
                    }
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize tooltips
            $('[data-bs-toggle="tooltip"]').tooltip();
        });

        function toggleCustomerStatus(customerId) {
            const button = $(`button[onclick="toggleCustomerStatus(${customerId})"]`);
            const originalHtml = button.html();
            
            button.html('<i class="fas fa-spinner fa-spin"></i>').prop('disabled', true);
            
            $.post('@Url.Action("ToggleStatus")', { id: customerId })
                .done(function(response) {
                    if (response.success) {
                        showToast(response.message, 'success');
                        
                        // Update UI
                        const row = $(`#customer-${customerId}`);
                        const statusBadge = row.find('.badge');
                        const actionButton = row.find('.status-toggle');
                        
                        if (response.isActive) {
                            statusBadge.removeClass('bg-secondary').addClass('bg-success')
                                .html('<i class="fas fa-check-circle me-1"></i>Aktif');
                            actionButton.removeClass('btn-outline-success').addClass('btn-outline-warning')
                                .attr('title', 'Pasif Yap')
                                .html('<i class="fas fa-user-slash"></i>');
                        } else {
                            statusBadge.removeClass('bg-success').addClass('bg-secondary')
                                .html('<i class="fas fa-times-circle me-1"></i>Pasif');
                            actionButton.removeClass('btn-outline-warning').addClass('btn-outline-success')
                                .attr('title', 'Aktif Yap')
                                .html('<i class="fas fa-user-check"></i>');
                        }
                        
                        // Refresh tooltip
                        actionButton.tooltip('dispose').tooltip();
                    } else {
                        showToast(response.message, 'error');
                        button.html(originalHtml);
                    }
                })
                .fail(function() {
                    showToast('Durum değiştirilemedi!', 'error');
                    button.html(originalHtml);
                })
                .always(function() {
                    button.prop('disabled', false);
                });
        }
    </script>
}

<style>
    .bg-gradient-primary {
        background: linear-gradient(45deg, #667eea 0%, #764ba2 100%);
    }
    .bg-gradient-success {
        background: linear-gradient(45deg, #56ab2f 0%, #a8e6cf 100%);
    }
    .bg-gradient-info {
        background: linear-gradient(45deg, #00c6ff 0%, #0072ff 100%);
    }
    
    .customer-avatar .avatar-circle {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        font-size: 1.1rem;
    }
    
    .card-icon {
        opacity: 0.8;
    }
    
    .table-hover tbody tr:hover {
        background-color: rgba(0,123,255,0.05);
    }
    
    .status-toggle:hover {
        transform: scale(1.1);
    }
</style>