@model IlisanCommerce.Models.ContactFormModel
@using IlisanCommerce.Services
@inject SettingsService SettingsService

@{
    ViewData["Title"] = "Iletisim";
    ViewData["MetaDescription"] = "ILISAN ile iletisime gecerek guvenlik ve saglik urunlerimiz hakkinda bilgi alabilirsiniz.";

    var siteName = await SettingsService.GetSiteNameAsync();
    var sitePhone = await SettingsService.GetContactPhoneAsync();
    var siteEmail = await SettingsService.GetContactEmailAsync();
    var siteAddress = await SettingsService.GetContactAddressAsync();
}

<section class="py-5 text-white" style="background: linear-gradient(120deg, #1c2735 0%, #4b3f72 50%, #c3317d 100%);">
    <div class="container py-4">
        <div class="row g-4 align-items-center">
            <div class="col-lg-8">
                <h1 class="display-5 fw-bold mb-3">Bizimle iletisime gecin</h1>
                <p class="lead text-white-50 mb-0">
                    @siteName ekibi, projeleriniz icin dogru malzemeyi secmenize yardimci olmak icin burada. 
                    Formu doldurun ya da asagidaki kanallardan bize ulasin.
                </p>
            </div>
            <div class="col-lg-4 text-lg-end">
                <span class="icon-circle bg-white text-primary shadow"><i class="fas fa-comments"></i></span>
            </div>
        </div>
    </div>
</section>

<section class="py-5">
    <div class="container">
        <div class="row g-4">
            <div class="col-lg-8">
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-primary text-white py-3">
                        <h3 class="mb-0"><i class="fas fa-paper-plane me-2"></i>Iletisim formu</h3>
                    </div>
                    <div class="card-body p-4">
                        @if (TempData["Success"] is string successMessage)
                        {
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                <i class="fas fa-check-circle me-2"></i>@successMessage
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }
                        @if (TempData["Error"] is string errorMessage)
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <i class="fas fa-exclamation-circle me-2"></i>@errorMessage
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }

                        <form asp-action="Contact" method="post" class="row g-3 needs-validation" novalidate>
                            @Html.AntiForgeryToken()
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="col-md-6">
                                <label asp-for="FullName" class="form-label">Ad soyad</label>
                                <input asp-for="FullName" class="form-control" placeholder="Adiniz ve soyadiniz" required />
                                <span asp-validation-for="FullName" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label">E-posta</label>
                                <input asp-for="Email" class="form-control" placeholder="ornek@eposta.com" required />
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Phone" class="form-label">Telefon</label>
                                <input asp-for="Phone" class="form-control" placeholder="(5xx) xxx xx xx" />
                                <span asp-validation-for="Phone" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Subject" class="form-label">Konu</label>
                                <input asp-for="Subject" class="form-control" placeholder="Gorusmek istediginiz konu" required />
                                <span asp-validation-for="Subject" class="text-danger small"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="Message" class="form-label">Mesajiniz</label>
                                <textarea asp-for="Message" class="form-control" rows="5" placeholder="Mesajinizi buraya yazabilirsiniz" required></textarea>
                                <span asp-validation-for="Message" class="text-danger small"></span>
                            </div>

                            <div class="col-12 d-flex justify-content-between align-items-center pt-2">
                                <small class="text-muted">Formu gonderdiginizde iletisime gecebilmemiz icin bilgilerinizi isleyebiliriz.</small>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-paper-plane me-2"></i>Mesaji gonder
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-body p-4">
                        <h5 class="fw-bold mb-4">Iletisim kanallarimiz</h5>
                        <div class="d-flex gap-3 mb-3">
                            <span class="icon-circle bg-primary text-white"><i class="fas fa-phone"></i></span>
                            <div>
                                <p class="mb-1 fw-semibold">Telefon</p>
                                <a href="tel:@sitePhone" class="text-decoration-none">@sitePhone</a>
                            </div>
                        </div>
                        <div class="d-flex gap-3 mb-3">
                            <span class="icon-circle bg-primary text-white"><i class="fas fa-envelope"></i></span>
                            <div>
                                <p class="mb-1 fw-semibold">E-posta</p>
                                <a href="mailto:@siteEmail" class="text-decoration-none">@siteEmail</a>
                            </div>
                        </div>
                        <div class="d-flex gap-3">
                            <span class="icon-circle bg-primary text-white"><i class="fas fa-map-marker-alt"></i></span>
                            <div>
                                <p class="mb-1 fw-semibold">Adres</p>
                                <p class="mb-0 text-muted">@siteAddress</p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card shadow-sm border-0">
                    <div class="card-body p-4">
                        <h5 class="fw-bold mb-3">Calisma saatleri</h5>
                        <ul class="list-unstyled text-muted mb-0">
                            <li class="mb-2"><strong>Pazartesi - Cuma:</strong> 09:00 - 18:00</li>
                            <li class="mb-2"><strong>Cumartesi:</strong> 09:00 - 14:00</li>
                            <li><strong>Pazar:</strong> Kapali</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="py-5 bg-light">
    <div class="container">
        <div class="row g-4 align-items-stretch">
            <div class="col-lg-6">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body p-4">
                        <h4 class="fw-bold mb-3">Neden ILISAN ile calismalisiniz?</h4>
                        <ul class="list-unstyled text-muted mb-0 d-grid gap-3">
                            <li class="d-flex gap-3">
                                <span class="icon-circle bg-primary text-white"><i class="fas fa-shield-alt"></i></span>
                                <div>
                                    <h6 class="fw-semibold mb-1">Yerli Ar-Ge ve uretim</h6>
                                    <p class="mb-0">Balistik ve radyasyon koruma urunlerinde patentli cozumler.</p>
                                </div>
                            </li>
                            <li class="d-flex gap-3">
                                <span class="icon-circle bg-primary text-white"><i class="fas fa-headset"></i></span>
                                <div>
                                    <h6 class="fw-semibold mb-1">Teknik destek</h6>
                                    <p class="mb-0">Urun secimi, montaj ve bakim surecinde uzman ekibimiz yaninizda.</p>
                                </div>
                            </li>
                            <li class="d-flex gap-3">
                                <span class="icon-circle bg-primary text-white"><i class="fas fa-seedling"></i></span>
                                <div>
                                    <h6 class="fw-semibold mb-1">Surdurulebilir yaklasim</h6>
                                    <p class="mb-0">Cevreye duyarlı malzemeler ve enerji verimli uretim altyapisi.</p>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="card h-100 shadow-sm border-0 overflow-hidden">
                    <div class="ratio ratio-4x3">
                        <iframe 
                            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3153.8354345093747!2d36.9173!3d37.5776!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zMzfCsDM0JzM5LjQiTiAzNsKwNTUnMDIuMyJF!5e0!3m2!1str!2str!4v1234567890123!5m2!1str!2str"
                            width="100%"
                            height="100%"
                            style="border:0;"
                            allowfullscreen=""
                            loading="lazy"
                            referrerpolicy="no-referrer-when-downgrade"></iframe>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        (function () {
            "use strict";
            const forms = document.querySelectorAll(".needs-validation");
            forms.forEach(form => {
                form.addEventListener("submit", event => {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add("was-validated");
                }, false);
            });
        })();
    </script>
}

<style>
    .icon-circle {
        width: 42px;
        height: 42px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        font-size: 1rem;
    }
</style>
