        <div class="cookie-modal-header">
            <h3>🍪 Çerez Tercihlerinizi Yönetin</h3>
            <button class="cookie-modal-close" onclick="hideCookieSettings()">&times;</button>
        </div>
        <div class="cookie-modal-body">
            <div class="cookie-category-setting">
                <div class="cookie-toggle">
                    <label>
                        <input type="checkbox" checked disabled> Zorunlu Çerezler
                        <span class="required-note">(Devre dışı bırakılamaz)</span>
                    </label>
                </div>
            </div>
            <div class="cookie-category-setting">
                <div class="cookie-toggle">
                    <label>
                        <input type="checkbox" id="functionalCookies" checked> İşlevsel Çerezler
                    </label>
                </div>
            </div>
            <div class="cookie-category-setting">
                <div class="cookie-toggle">
                    <label>
                        <input type="checkbox" id="analyticsCookies" checked> Analiz Çerezleri
                    </label>
                </div>
            </div>
            <div class="cookie-category-setting">
                <div class="cookie-toggle">
                    <label>
                        <input type="checkbox" id="marketingCookies"> Pazarlama Çerezleri
                    </label>
                </div>
            </div>
        </div>
        <div class="cookie-modal-footer">
            <button class="btn-accept-all" onclick="acceptAllCookies()">Tümünü Kabul Et</button>
            <button class="btn-save-settings" onclick="saveCookieSettings()">Ayarları Kaydet</button>
            <button class="btn-reject-all" onclick="rejectAllCookies()">Tümünü Reddet</button>
        </div>
    </div>
</div>

